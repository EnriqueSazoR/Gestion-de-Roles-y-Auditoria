generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


// Modelo usuario
model usuario {
  id            Int     @id @default(autoincrement())
  nombreUsuario String  @unique
  email         String  @unique
  password      String  
  estado        Estado  @default(Activo)
  idRol         Int

  rol rol @relation(fields: [idRol], references: [id])
}

// Modelo rol 
model rol {
  id           Int  @id @default(autoincrement())
  nombreRol    String @unique
  usuarios usuario[]
}

enum Estado {
  Activo
  Inactivo
}
